@font-face {
  font-family: AvenirBlack;
  src: url('https://images.allcitygo.com/font/Avenir%20Black.ttf');
}
@font-face {
  font-family: AvenirHeavy;
  src: url('https://images.allcitygo.com/font/Avenir%20Heavy.ttf');
}
.line-through {
  text-decoration: line-through;
}

/* 字体 */
.font20 {
  font-size: 20rpx;
}
.font24 {
  font-size: 24rpx;
}
.font28 {
  font-size: 28rpx;
}

.font32 {
  font-size: 32rpx;
}

.font36 {
  font-size: 36rpx;
}

.font40 {
  font-size: 40rpx;
}

.font48 {
  font-size: 48rpx;
}

.font54 {
  font-size: 54rpx;
}

.fontAvenir {
  font-family: AvenirBlack!important;
  font-weight: 900;
}

.fontGray {
  color: #AEB5C0;
}

.marginRight10 {
  margin-right: 10rpx;
}

.marginTop20 {
  margin-top: 20rpx;
}

.marginBottom24 {
  margin-bottom: 24rpx;
}

.marginBottom14 {
  margin-bottom: 14rpx;
}

.header {
  position: relative;
}

.header .header-left {
  font-size: 40rpx;
  color: #FFFFFF;
  width: 30%;
  text-indent: 32rpx;
}

.header .header-title {
  font-size: 36rpx;
  color: #FFFFFF;
  text-align: center;
  width: 40%;
}

.container {
  width: 100vw;
  height: 100vh;
  overflow-x: hidden;
  -webkit-font-smoothing: antialiased;
  -webkit-overflow-scrolling: touch;
}

page {
  font-size: 30rpx;
}


/* flex */
.flex {
  display: -webkit-flex;
  display: flex;
}

.flex-column {
  -webkit-flex-direction: column;
  flex-direction: column;
}

.justify-between {
  justify-content: space-between;
}

.justify-around {
  justify-content: space-around;
}

.justify-content {
  justify-content: center;
}

.align-center {
  align-items: center;
}

.text-center {
  text-align: center;
}

.label {
